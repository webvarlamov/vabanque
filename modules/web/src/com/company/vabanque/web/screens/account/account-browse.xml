<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://accountBrowse.caption"
        focusComponent="accountsTable"
        messagesPack="com.company.vabanque.web.screens.account">
    <data readOnly="true">
        <collection id="accountsDc"
                    class="com.company.vabanque.entity.Account">
            <view extends="_account-with-transactions-view"/>
            <loader id="accountsDl">
                <query>
                    <![CDATA[select e from vabanque_Account e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="accountsTable"
            spacing="true">
        <filter id="filter"
                applyTo="accountsTable"
                dataLoader="accountsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="accountsTable"
                    width="100%"
                    dataContainer="accountsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="type"/>
                <column id="description"/>
                <column id="incomeTotal"/>
                <column id="outcomeTotal"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="accountsTable.create"/>
                <button id="editBtn" action="accountsTable.edit"/>
                <button id="removeBtn" action="accountsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
